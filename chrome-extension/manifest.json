{
  "manifest_version": 3,
  "name": "바코드 등록번호 검색기",
  "version": "1.0.0",
  "description": "웹페이지에서 바코드(등록번호)를 검색하고 하이라이트합니다.",
  "permissions": ["scripting", "activeTab", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
